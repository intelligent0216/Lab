#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>

int max(int *arr, int n)
{
  int max = arr[0];
  for (int q = 0; q < n; q++)
  {
    if (max < arr[q])
    {
      max = arr[q];
    }
  }
  return max;
}

int min(int *arr, int n)
{
  int min = arr[0];
  for (int q = 0; q < n; q++)
  {
    if (min > arr[q])
    {
      min = arr[q];
    }
  }
  return min;
}

double mean(int *arr, int n)
{
  double mean=0.;
  for (int q = 0; q < n; q++)
  {
    mean += arr[q];
  }
  return mean/n;
}

int median(int *arr, int n)
{
  int median   = arr[0];  
  double mean2 = mean(arr , n);
  
  for (int q = 0; q < n; q++)
  {
    if (fabs(arr[q] - mean2) < fabs(median - mean2))
    {
      median = arr[q];
    }
  }
  return median;
}

int main(void) {
  int arr[10];
  int *s_arr = arr;
  int n = sizeof(arr)/sizeof(int);

  srand(time(NULL));
  for (int q = 0; q < 10; q++) 
  {
    arr[q] = rand() % 101;
    printf("%d ", arr[q]);
  }
  printf("\n");

  printf("%d\n", max(s_arr, n));
  printf("%d\n", min(s_arr, n));
  printf("%.2lf\n", mean(s_arr, n));
  printf("%.d\n", median(s_arr, n));
  return 0;
}
